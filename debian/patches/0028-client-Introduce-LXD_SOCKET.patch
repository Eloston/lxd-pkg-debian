 client/connection.go            | 18 +++++++++++-------
 lxd/daemon.go                   |  6 ++++++
 lxd/endpoints/endpoints.go      |  8 +++++++-
 lxd/endpoints/endpoints_test.go |  1 +
 lxd/endpoints/local.go          |  5 +----
