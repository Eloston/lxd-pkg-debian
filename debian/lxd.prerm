#!/bin/sh
set -e

#DEBHELPER#

# Manual init script handling
if [ -d /run/systemd/system ]; then
    if [ "$1" = "remove" ]; then
        deb-systemd-invoke stop lxd-containers.service lxd.socket lxd.service >/dev/null || true
    else
        deb-systemd-invoke stop lxd.service >/dev/null || true
    fi
fi

exit 0
